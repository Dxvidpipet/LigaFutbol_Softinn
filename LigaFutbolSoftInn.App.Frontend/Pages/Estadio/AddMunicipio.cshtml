@page
@model HospiEnCasa.App.Frontend.Pages.AddMunicipioModel
@{
}

<h1>Asignar Municipio</h1>
<form method="post">
    <div class="form-group">
        <label for="idEstadio">Estadio</label>
        <input type="text" id="idEstadio" name="idEstadio" class="form-control" value="@Model.estadio.IdEstadio" readonly>
    </div>
    <div class="form-group">
        <label for="idMunicipio">Municipio</label>
        <select id="idMunicipio" name="idMunicipio" class="form-control">
            @foreach (var municipio in Model.municipios)
            {
                <option value="@municipio.IdMunicipio">@municipio.NombreMunicipio</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Asignar Municipio</button>
</form>
<a class="btn btn-secondary" asp-page="./IndexEstadio">Volver</a>