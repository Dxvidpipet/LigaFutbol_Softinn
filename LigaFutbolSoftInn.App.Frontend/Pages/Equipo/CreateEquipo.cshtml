@page
@model LigaFutbolSoftInn.App.Frontend.Pages.CreateEquipoModel
@{
}
<h1>Nuevo Equipo</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="equipo.NombreEquipo"></label>
        <input asp-for="equipo.NombreEquipo" class="form-control">
        <span asp-validation-for="equipo.NombreEquipo" class="text-danger"></span>
    </div>     
     <div class="form-group">  
        <label for="idMunicipio">Municipio</label>
        <select id="idMunicipio" name="idMunicipio" class="form-control">
        <option value="idMunicipio"></option>
            @foreach (var municipio in Model.municipios)
            {
                <option value="@municipio.IdMunicipio">@municipio.NombreMunicipio</option>
            }
        </select>
        <span asp-validation-for="equipo.Municipio" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Crear Equipo</button>
    
</form>
<a class="btn btn-secondary" asp-page="./IndexEquipo">Volver</a>
