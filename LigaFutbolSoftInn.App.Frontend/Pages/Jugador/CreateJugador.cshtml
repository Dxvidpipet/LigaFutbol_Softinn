@model LigaFutbolSoftInn.App.Frontend.Pages.CreateJugadorModel
@{
}
<h1>Nuevo Jugador</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="jugador.NombreJugador"></label>
        <input asp-for="jugador.NombreJugador" class="form-control">
        <span asp-validation-for="jugador.NombreJugador" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="jugador.NumeroJugador"></label>
        <input asp-for="jugador.NumeroJugador" class="form-control">
        <span asp-validation-for="jugador.NumeroJugador" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="jugador.PosicionJugador"></label>
        <input asp-for="jugador.PosicionJugador" class="form-control">
        <span asp-validation-for="jugador.PosicionJugador" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="jugador.Equipo"></label>
        <input asp-for="jugador.Equipo" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Crear Jugador</button>
</form>
<a class="btn btn-secondary" asp-page = "./Index">Volver</a>